---
import site from "../data/site.json";
import SectionHeader from "./SectionHeader.astro";
import Button from "./Button.astro";

const base = import.meta.env.BASE_URL.endsWith("/")
    ? import.meta.env.BASE_URL
    : `${import.meta.env.BASE_URL}/`;
---

<section class="py-24 bg-charcoal text-cream relative overflow-hidden">
    <!-- Background pattern/texture could go here -->

    <div
        class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-12 items-center relative z-10"
    >
        <div>
            <SectionHeader
                title="Details"
                subtitle="Hours & Info"
                light
                class="mb-8"
            />

            <div class="space-y-8">
                <div>
                    <h3
                        class="font-heading text-xl md:text-2xl text-primary mb-2"
                    >
                        Concept location
                    </h3>
                    <p class="text-lg leading-relaxed text-white/90">
                        {site.address.street}<br />
                        {site.address.suburb}
                    </p>
                    <p class="mt-2 text-white/50 text-sm">
                        Fictional details for a portfolio demo.
                    </p>
                </div>

                <div>
                    <h3
                        class="font-heading text-xl md:text-2xl text-primary mb-2"
                    >
                        Hours
                    </h3>
                    <p class="text-lg text-white/90">{site.hours}</p>
                    <p class="text-lg text-white/90">Open 7 days a week</p>
                </div>

                <div class="flex flex-col sm:flex-row gap-4 pt-6">
                    <Button
                        href={`${base}contact`}
                        variant="secondary"
                        class="bg-white text-charcoal border-white hover:bg-cream hover:text-charcoal hover:border-cream"
                    >
                        Contact
                    </Button>
                    <Button
                        href={site.orderUrl}
                        target="_blank"
                        variant="outline"
                        class="text-white border-white hover:bg-white hover:text-charcoal"
                    >
                        Order Online
                    </Button>
                </div>
            </div>
        </div>

        <!-- Map Placeholder -->
        <div
            class="h-[400px] w-full bg-white/5 border-2 border-white/20 p-2 relative group overflow-hidden"
        >
            <!-- Interactive Map Placeholder -->
            <div
                class="w-full h-full bg-white/5 flex items-center justify-center text-white/20 font-heading uppercase text-2xl tracking-widest group-hover:bg-white/10 transition-colors"
            >
                Map View
            </div>
            <div
                class="absolute bottom-4 right-4 bg-primary text-white px-4 py-2 font-bold uppercase text-xs tracking-wider shadow-lg border border-charcoal"
            >
                {site.address.suburb}
            </div>
        </div>
    </div>
</section>
