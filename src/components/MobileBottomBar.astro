---
import site from "../data/site.json";
---

<div
    class="fixed bottom-0 left-0 right-0 z-40 flex h-16 md:hidden border-t-2 border-charcoal text-white font-heading uppercase font-bold tracking-wider shadow-[0px_-4px_10px_rgba(0,0,0,0.1)]"
>
    <!-- Call Button -->
    <a
        href={`tel:${site.phone}`}
        class="flex-1 flex items-center justify-center bg-charcoal hover:bg-black transition-colors gap-2 text-sm"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path></svg
        >
        Call Shop
    </a>

    <!-- Order Button -->
    <a
        href={site.orderUrl}
        class="flex-1 flex items-center justify-center bg-primary hover:bg-red-700 transition-colors gap-2 text-sm"
    >
        Order Now
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"
            ></path><line x1="3" y1="6" x2="21" y2="6"></line><path
                d="M16 10a4 4 0 0 1-8 0"></path></svg
        >
    </a>
</div>
