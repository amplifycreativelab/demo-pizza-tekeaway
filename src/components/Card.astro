---
interface Props {
    class?: string;
    noPadding?: boolean;
}
const { class: className, noPadding = false } = Astro.props;
---

<div
    class:list={[
        "bg-white border-2 border-charcoal shadow-[4px_4px_0px_0px_#1A1A1A]",
        !noPadding && "p-6",
        className,
    ]}
>
    <slot />
</div>
